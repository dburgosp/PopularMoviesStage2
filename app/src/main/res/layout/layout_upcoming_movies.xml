<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/upcoming_movies_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:paddingBottom="@dimen/big_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/regular_padding"
            android:drawablePadding="@dimen/tiny_padding"
            android:drawableStart="@drawable/ic_local_movies_white_18dp"
            android:text="@string/upcoming_movies_title"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/normal_plus_text_size" />

        <TextView
            android:id="@+id/upcoming_movies_view_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/regular_padding"
            android:layout_marginStart="@dimen/regular_padding"
            android:gravity="end"
            android:text="@string/view_all"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/normal_plus_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/upcoming_movies_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/regular_padding"
        app:cardCornerRadius="@dimen/small_padding">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/upcoming_movies_cardview_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/backdrop_collection_height"
                android:scaleType="centerCrop"
                android:src="@drawable/no_backdrop" />

            <ImageView
                android:id="@+id/upcoming_movies_cardview_gradient"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_top_movie_details_cardview"
                android:layout_above="@+id/upcoming_movies_cardview_title"
                android:layout_alignParentStart="true"
                android:src="@drawable/gradient_header_bg"
                android:tint="@color/colorHighScoreBackground" />

            <TextView
                android:id="@+id/upcoming_movies_cardview_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/upcoming_movies_cardview_title"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/small_padding"
                android:drawablePadding="@dimen/tiny_padding"
                android:drawableStart="@drawable/ic_date_range_white_18dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/normal_text_size"
                tools:text="2018-07-13" />

            <TextView
                android:id="@+id/upcoming_movies_cardview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/upcoming_movies_cardview_image"
                android:background="@color/colorPrimary"
                android:paddingBottom="@dimen/tiny_padding"
                android:paddingEnd="@dimen/small_padding"
                android:paddingStart="@dimen/small_padding"
                android:paddingTop="@dimen/tiny_padding"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                tools:text="Movie Title" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/upcoming_movies_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>