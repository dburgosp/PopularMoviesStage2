<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/regular_padding"
            android:layout_marginStart="@dimen/regular_padding"
            android:text="UPCOMING MOVIES"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/regular_padding"
            android:layout_marginStart="@dimen/regular_padding"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/colorWhite"
            android:elevation="@dimen/separator"
            android:paddingBottom="@dimen/tiny_padding"
            android:paddingEnd="@dimen/regular_padding"
            android:paddingStart="@dimen/regular_padding"
            android:paddingTop="@dimen/tiny_padding"
            android:text="@string/view_all"
            android:textColor="@color/colorHighScoreBackground"
            android:textSize="@dimen/normal_text_size" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="@dimen/regular_padding"
        app:cardCornerRadius="@dimen/small_padding">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/no_backdrop" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/gradient_header_bg"
                android:tint="@color/colorHighScoreBackground" />

            <TextView
                android:id="@+id/upcoming_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/tiny_padding"
                android:paddingEnd="@dimen/small_padding"
                android:paddingStart="@dimen/small_padding"
                android:paddingTop="@dimen/tiny_padding"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                tools:text="Movie Title" />

            <TextView
                android:id="@+id/upcoming_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/upcoming_textview"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/small_padding"
                android:drawablePadding="@dimen/tiny_padding"
                android:drawableStart="@drawable/ic_date_range_white_18dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/normal_text_size"
                tools:text="2018-07-13" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>