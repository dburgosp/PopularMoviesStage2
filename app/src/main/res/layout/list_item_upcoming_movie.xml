<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/small_padding"
    app:cardElevation="@dimen/separator">

    <LinearLayout
        android:layout_width="@dimen/poster_width"
        android:layout_height="match_parent"
        android:background="@color/colorHighScoreBackground"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/poster_width"
            android:layout_height="@dimen/poster_height">

            <ImageView
                android:id="@+id/movie_short_list_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/no_poster" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/gradient_header_bg"
                android:tint="@color/colorHighScoreBackground" />

            <TextView
                android:id="@+id/movie_short_list_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/tiny_padding"
                android:drawablePadding="@dimen/separator"
                android:drawableStart="@drawable/ic_date_range_white_18dp"
                android:gravity="center"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/normal_text_size"
                tools:text="2000-01-01" />
        </RelativeLayout>

        <TextView
            android:id="@+id/movie_short_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tiny_padding"
            android:layout_marginEnd="@dimen/small_padding"
            android:layout_marginStart="@dimen/small_padding"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:lines="2"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="bold"
            tools:text="Movie title" />

        <TextView
            android:id="@+id/movie_short_list_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>
</android.support.v7.widget.CardView>
