<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/tiny_padding"
    android:layout_marginStart="@dimen/regular_padding"
    android:layout_marginTop="@dimen/small_padding"
    app:cardElevation="@dimen/separator">

    <LinearLayout
        android:layout_width="@dimen/poster_width"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/movie_short_list_poster"
            android:layout_width="@dimen/poster_width"
            android:layout_height="@dimen/poster_height"
            android:scaleType="centerCrop"
            android:src="@drawable/no_poster" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/movie_short_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tiny_padding"
            android:layout_marginEnd="@dimen/small_padding"
            android:layout_marginStart="@dimen/small_padding"
            android:layout_marginTop="@dimen/tiny_padding"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="2"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="bold"
            tools:text="Movie title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tiny_padding"
            android:layout_marginEnd="@dimen/small_padding"
            android:layout_marginStart="@dimen/small_padding"
            android:layout_marginTop="@dimen/tiny_padding">

            <TextView
                android:id="@+id/movie_short_list_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/small_padding"
                android:drawablePadding="@dimen/separator"
                android:drawableStart="@drawable/ic_date_range_black_18dp"
                android:gravity="center"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/normal_text_size"
                tools:text="2000" />

            <TextView
                android:id="@+id/movie_short_list_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/small_padding"
                android:drawablePadding="@dimen/separator"
                android:drawableStart="@drawable/ic_star_black_18dp"
                android:gravity="end"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/normal_text_size"
                tools:text="5.5" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
