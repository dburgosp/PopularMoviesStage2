<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/upcoming_movies_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorHighScoreBackground"
    android:orientation="vertical"
    android:paddingBottom="@dimen/regular_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/regular_padding"
        android:paddingTop="@dimen/big_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/regular_padding"
            android:drawablePadding="@dimen/tiny_padding"
            android:drawableStart="@drawable/ic_local_movies_white_18dp"
            android:text="@string/movies_sort_by_upcoming"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/normal_plus_text_size" />

        <TextView
            android:id="@+id/upcoming_movies_view_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/regular_padding"
            android:layout_marginStart="@dimen/regular_padding"
            android:gravity="end"
            android:text="@string/view_all"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/normal_plus_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/upcoming_movies_most_popular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/upcoming_movies_most_popular_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description_backdrop"
            android:scaleType="centerCrop"
            android:src="@drawable/no_backdrop" />

        <TextView
            android:id="@+id/upcoming_movies_most_popular_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/small_padding"
            android:paddingEnd="@dimen/regular_padding"
            android:paddingStart="@dimen/regular_padding"
            android:paddingTop="@dimen/small_padding"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/normal_plus_text_size"
            android:textStyle="bold"
            tools:text="Movie Title" />

        <TextView
            android:id="@+id/upcoming_movies_most_popular_overwiew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingBottom="@dimen/small_padding"
            android:paddingEnd="@dimen/regular_padding"
            android:paddingStart="@dimen/regular_padding"
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/normal_text_size"
            tools:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Donec quam felis, ultricies nec, pellentesque eu, pretium quis, sem. Nulla consequat massa quis enim." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/big_padding"
            android:paddingEnd="@dimen/regular_padding"
            android:paddingStart="@dimen/regular_padding">

            <TextView
                android:id="@+id/upcoming_movies_most_popular_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/small_padding"
                android:drawablePadding="@dimen/tiny_padding"
                android:drawableStart="@drawable/ic_date_range_white_18dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/normal_text_size"
                tools:text="2018-07-13" />

            <TextView
                android:id="@+id/upcoming_movies_most_popular_most_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_thumb_up_white_18dp"
                android:drawablePadding="@dimen/small_padding"
                android:gravity="end|center_vertical"
                android:text="@string/most_popular"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/normal_text_size" />
        </LinearLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/upcoming_movies_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/small_padding"
                android:background="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/tiny_padding"
                app:cardElevation="@dimen/separator">

                <TextView
                    android:id="@+id/upcoming_movies_view_all_action"
                    android:layout_width="@dimen/poster_width"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:drawableBottom="@drawable/ic_pageview_white_48dp"
                    android:gravity="center"
                    android:padding="@dimen/small_padding"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold"
                    tools:text="View the 100 upcoming movies to be released in theaters" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>