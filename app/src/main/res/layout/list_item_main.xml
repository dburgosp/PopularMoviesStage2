<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/list_item_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/list_item_main_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/content_description_poster"
            android:scaleType="centerCrop"
            android:src="@drawable/no_backdrop" />

        <LinearLayout
            android:id="@+id/list_item_main_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-12dp"
            android:layout_marginEnd="-12dp"
            android:alpha="0.8"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/colorPrimaryDark"
            android:gravity="end"
            android:orientation="vertical"
            android:paddingBottom="24dp"
            android:paddingEnd="@dimen/big_padding"
            android:paddingStart="@dimen/regular_padding"
            android:paddingTop="@dimen/tiny_padding">

            <TextView
                android:id="@+id/list_item_main_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/normal_plus_text_size"
                tools:text="Movie title / Series title / Person name" />

            <TextView
                android:id="@+id/list_item_main_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:drawablePadding="@dimen/separator"
                android:drawableStart="@drawable/ic_date_range_white_18dp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/normal_text_size"
                tools:text="2000-01-01" />

            <TextView
                android:id="@+id/list_item_main_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:drawablePadding="@dimen/separator"
                android:drawableStart="@drawable/ic_star_black_18dp"
                android:gravity="center_vertical|end"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/normal_text_size"
                tools:text="5.5" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>