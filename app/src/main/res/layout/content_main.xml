<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.popularmoviesstage2.activities.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_upcoming_movies" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="@dimen/regular_padding"
            app:cardCornerRadius="@dimen/small_padding"
            android:layout_marginEnd="@dimen/small_padding"
            android:layout_marginStart="@dimen/regular_padding">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/now_playing_movies" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/gradient_header_bg"
                    android:tint="@color/colorHighScoreBackground" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/now_playing_textview"
                    android:paddingEnd="@dimen/small_padding"
                    android:paddingStart="@dimen/small_padding"
                    android:paddingTop="@dimen/tiny_padding"
                    android:paddingBottom="@dimen/tiny_padding"
                    android:text="NOW PLAYING"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/normal_text_size"
                    android:id="@+id/textView3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView3"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/rounded_button"
                    android:elevation="@dimen/separator"
                    android:layout_marginEnd="@dimen/regular_padding"
                    android:paddingBottom="@dimen/tiny_padding"
                    android:paddingEnd="@dimen/regular_padding"
                    android:paddingStart="@dimen/regular_padding"
                    android:paddingTop="@dimen/tiny_padding"
                    android:text="View all"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/now_playing_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="@dimen/tiny_padding"
                    android:paddingEnd="@dimen/small_padding"
                    android:paddingStart="@dimen/small_padding"
                    android:paddingTop="@dimen/tiny_padding"
                    android:text="The Nut Job 2: Nutty by Nature"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/regular_padding"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginEnd="@dimen/small_padding"
                android:layout_marginStart="@dimen/regular_padding"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/on_the_air_tv" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/gradient_header_bg"
                        android:tint="@color/colorMediumScoreBackground" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="sans-serif-smallcaps"
                        android:paddingBottom="@dimen/tiny_padding"
                        android:paddingEnd="@dimen/small_padding"
                        android:paddingStart="@dimen/small_padding"
                        android:paddingTop="@dimen/tiny_padding"
                        android:text="TV\nON THE AIR"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/normal_text_size"
                        android:textStyle="bold" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginEnd="@dimen/regular_padding"
                android:layout_marginStart="@dimen/small_padding"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/now_playing_movies" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/gradient_header_bg"
                        android:tint="@color/colorHighScoreBackground" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="sans-serif-smallcaps"
                        android:paddingBottom="@dimen/tiny_padding"
                        android:paddingEnd="@dimen/small_padding"
                        android:paddingStart="@dimen/small_padding"
                        android:paddingTop="@dimen/tiny_padding"
                        android:text="Movies\nNOW PLAYING"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/normal_text_size"
                        android:textStyle="bold" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/small_padding"
            android:layout_marginEnd="@dimen/regular_padding"
            android:layout_marginStart="@dimen/regular_padding"
            android:layout_marginTop="@dimen/big_padding"
            android:text="POPULAR"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/poster_info_height"
                android:layout_marginEnd="@dimen/small_padding"
                android:layout_marginStart="@dimen/regular_padding"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/popular_people" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/gradient_header_bg"
                        android:tint="@color/colorLowScoreBackground" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="sans-serif-smallcaps"
                        android:paddingBottom="@dimen/tiny_padding"
                        android:paddingEnd="@dimen/small_padding"
                        android:paddingStart="@dimen/small_padding"
                        android:paddingTop="@dimen/tiny_padding"
                        android:text="People"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/normal_text_size"
                        android:textStyle="bold" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/poster_info_height"
                android:layout_marginEnd="@dimen/small_padding"
                android:layout_marginStart="@dimen/small_padding"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/popular_tv" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/gradient_header_bg"
                        android:tint="@color/colorMediumScoreBackground" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="sans-serif-smallcaps"
                        android:paddingBottom="@dimen/tiny_padding"
                        android:paddingEnd="@dimen/small_padding"
                        android:paddingStart="@dimen/small_padding"
                        android:paddingTop="@dimen/tiny_padding"
                        android:text="TV"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/normal_text_size"
                        android:textStyle="bold" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/poster_info_height"
                android:layout_marginEnd="@dimen/regular_padding"
                android:layout_marginStart="@dimen/small_padding"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/popular_movies" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/gradient_header_bg"
                        android:tint="@color/colorHighScoreBackground" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="sans-serif-smallcaps"
                        android:paddingBottom="@dimen/tiny_padding"
                        android:paddingEnd="@dimen/small_padding"
                        android:paddingStart="@dimen/small_padding"
                        android:paddingTop="@dimen/tiny_padding"
                        android:text="Movies"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/normal_text_size"
                        android:textStyle="bold" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/small_padding"
            android:layout_marginEnd="@dimen/regular_padding"
            android:layout_marginStart="@dimen/regular_padding"
            android:layout_marginTop="@dimen/big_padding"
            android:text="TOP RATED"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/regular_padding"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/small_padding"
                android:layout_marginStart="@dimen/regular_padding"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/no_backdrop" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/gradient_header_bg"
                        android:tint="@color/colorMediumScoreBackground" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="sans-serif-smallcaps"
                        android:paddingBottom="@dimen/tiny_padding"
                        android:paddingEnd="@dimen/small_padding"
                        android:paddingStart="@dimen/small_padding"
                        android:paddingTop="@dimen/tiny_padding"
                        android:text="TV"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/normal_text_size"
                        android:textStyle="bold" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/regular_padding"
                android:layout_marginStart="@dimen/small_padding"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/no_backdrop" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/gradient_header_bg"
                        android:tint="@color/colorHighScoreBackground" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="sans-serif-smallcaps"
                        android:paddingBottom="@dimen/tiny_padding"
                        android:paddingEnd="@dimen/small_padding"
                        android:paddingStart="@dimen/small_padding"
                        android:paddingTop="@dimen/tiny_padding"
                        android:text="Movies"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/normal_text_size"
                        android:textStyle="bold" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
