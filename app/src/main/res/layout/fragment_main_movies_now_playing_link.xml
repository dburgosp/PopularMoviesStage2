<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/now_playing_movies_view_all_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/now_playing_movies_view_all_action"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:drawableBottom="@drawable/ic_pageview_white_48dp"
        android:gravity="center_horizontal|bottom"
        android:padding="@dimen/small_padding"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/normal_text_size"
        android:textStyle="bold"
        tools:text="View the 100 movies that are now playing in theaters" />

</LinearLayout>