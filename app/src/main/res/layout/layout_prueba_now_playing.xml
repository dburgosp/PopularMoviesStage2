<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_now_playing_movies_cardview"
    style="@style/HomeCardViewStyle"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ViewFlipper
            android:id="@+id/home_now_playing_viewflipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/movies_sort_by_now_playing"
                android:scaleType="centerCrop"
                android:src="@drawable/no_backdrop" />
        </ViewFlipper>

        <TextView
            style="@style/HomeUpRightTextStyle"
            android:backgroundTint="#9C27B0"
            android:drawableEnd="@drawable/ic_local_movies_white_18dp"
            android:text="@string/movies" />

        <TextView
            style="@style/HomeBottomTextStyle"
            android:backgroundTint="#9C27B0"
            android:text="@string/movies_sort_by_now_playing" />
    </RelativeLayout>
</android.support.v7.widget.CardView>