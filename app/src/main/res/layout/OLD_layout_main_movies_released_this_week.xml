<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/released_this_week_movies_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:paddingBottom="@dimen/regular_padding"
    android:paddingTop="@dimen/big_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/regular_padding"
        android:layout_marginEnd="@dimen/regular_padding"
        android:layout_marginStart="@dimen/regular_padding"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/regular_padding"
            android:drawablePadding="@dimen/tiny_padding"
            android:drawableStart="@drawable/ic_local_movies_white_18dp"
            android:text="@string/movies_sort_by_released_this_week"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/normal_plus_text_size" />

        <TextView
            android:id="@+id/released_this_week_movies_view_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/view_all"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/normal_plus_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/released_this_week_movies_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.CardView
                android:id="@+id/released_this_week_movies_view_all_cardview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/small_padding"
                android:layout_marginEnd="-4dp"
                android:background="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/tiny_padding"
                app:cardElevation="@dimen/separator">

                <RelativeLayout
                    android:layout_width="122dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:alpha="0.2"
                        android:background="@color/colorHighScoreBackground" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/poster_height"
                        android:background="@color/colorAccent" />

                    <TextView
                        android:id="@+id/released_this_week_movies_view_all_action"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/tiny_padding"
                        android:drawableBottom="@drawable/ic_touch_app_white_48dp"
                        android:gravity="center"
                        android:minHeight="@dimen/backdrop_info_height"
                        android:paddingEnd="@dimen/small_padding"
                        android:paddingStart="@dimen/small_padding"
                        android:paddingTop="@dimen/big_padding"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/normal_text_size"
                        android:textStyle="bold"
                        tools:text="View the 100 movies to be released this week in theaters" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>