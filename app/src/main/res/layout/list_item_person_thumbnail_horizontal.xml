<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/small_padding"
    android:layout_marginStart="@dimen/regular_padding"
    android:layout_marginTop="@dimen/small_padding"
    app:cardCornerRadius="@dimen/small_padding"
    app:cardElevation="@dimen/separator">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cast_crew_character"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="2"
            android:paddingBottom="@dimen/tiny_padding"
            android:paddingEnd="@dimen/small_padding"
            android:paddingStart="@dimen/small_padding"
            android:paddingTop="@dimen/tiny_padding"
            android:textSize="@dimen/normal_text_size"
            tools:text="Character name" />

        <ImageView
            android:id="@+id/cast_crew_image"
            android:layout_width="@dimen/photo_thumbnail_width"
            android:layout_height="@dimen/photo_thumbnail_height"
            android:background="@color/colorDarkWhite"
            android:contentDescription="@string/content_description_person_image"
            android:scaleType="centerCrop"
            android:src="@drawable/no_person" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/cast_crew_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="2"
            android:paddingBottom="@dimen/tiny_padding"
            android:paddingEnd="@dimen/small_padding"
            android:paddingStart="@dimen/small_padding"
            android:paddingTop="@dimen/tiny_padding"
            android:textSize="@dimen/normal_plus_text_size"
            android:textStyle="bold"
            tools:text="Artist name" />
    </LinearLayout>
</android.support.v7.widget.CardView>
