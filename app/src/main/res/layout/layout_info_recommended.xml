<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recommended_movies_keywords_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorDarkWhite"
    android:orientation="vertical"
    android:paddingBottom="@dimen/big_padding">

    <LinearLayout
        android:id="@+id/recommended_movies_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_section_bg"
        android:orientation="vertical"
        android:paddingTop="@dimen/big_padding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_padding"
            android:layout_marginEnd="@dimen/regular_padding"
            android:layout_marginStart="@dimen/regular_padding">

            <TextView
                android:id="@+id/recommended_movies_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recommended_movies"
                android:textAllCaps="true"
                android:textSize="@dimen/normal_plus_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recommended_movies_view_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/regular_padding"
                android:layout_toEndOf="@id/recommended_movies_title"
                android:gravity="end"
                android:text="@string/view_all"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/normal_plus_text_size"
                android:textStyle="bold" />
        </RelativeLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recommended_movies_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.CardView
                    android:id="@+id/recommended_movies_view_all_cardview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/small_padding"
                    android:background="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/tiny_padding"
                    app:cardElevation="@dimen/separator">

                    <RelativeLayout
                        android:layout_width="122dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:alpha="0.2"
                            android:background="@color/colorHighScoreBackground" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/poster_height"
                            android:background="@color/colorAccent" />

                        <TextView
                            android:id="@+id/recommended_movies_view_all_action"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/tiny_padding"
                            android:drawableBottom="@drawable/ic_touch_app_white_48dp"
                            android:gravity="center"
                            android:minHeight="@dimen/backdrop_info_height"
                            android:paddingEnd="@dimen/small_padding"
                            android:paddingStart="@dimen/small_padding"
                            android:paddingTop="@dimen/big_padding"
                            android:textAllCaps="true"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/normal_text_size"
                            android:textStyle="bold"
                            tools:text="View the 100 recommended movies if you liked this one" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/info_keywords_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDarkWhite"
        android:orientation="vertical"
        android:paddingTop="@dimen/regular_padding">

        <TextView
            android:id="@+id/info_keywords_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/regular_padding"
            android:layout_marginStart="@dimen/regular_padding"
            android:textAllCaps="true"
            android:textSize="@dimen/normal_plus_text_size"
            android:textStyle="bold"
            tools:text="Keywords" />

        <com.example.android.popularmoviesstage2.viewgroups.FlowLayout
            android:id="@+id/info_keywords_flowlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/small_padding"
            android:layout_marginStart="@dimen/small_padding"
            android:layout_marginTop="@dimen/small_padding" />
    </LinearLayout>
</LinearLayout>