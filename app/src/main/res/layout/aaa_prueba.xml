                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="-12dp"
                    android:layout_marginTop="@dimen/small_padding"
                    android:alpha="0.7"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="#607D8B"
                    android:drawableEnd="@drawable/ic_local_movies_white_18dp"
                    android:drawablePadding="@dimen/tiny_padding"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/tiny_padding"
                    android:paddingEnd="@dimen/big_padding"
                    android:paddingStart="@dimen/regular_padding"
                    android:paddingTop="@dimen/tiny_padding"
                    android:text="@string/movies"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
