                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/normal_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/gradient_vertical_bottom"
                        android:backgroundTint="#558b2f"
                        android:drawableEnd="@drawable/ic_arrow_forward_white_24dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/small_padding"
                        android:paddingEnd="@dimen/small_padding"
                        android:paddingStart="@dimen/small_padding"
                        android:paddingTop="@dimen/big_padding"
                        android:text="@string/movies_sort_by_for_buy_and_rent"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/normal_text_size" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/tiny_padding"
                android:layout_weight="1"
                android:elevation="@dimen/small_padding"
                app:cardCornerRadius="@dimen/small_padding">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/aaa6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="-12dp"
                        android:layout_marginTop="@dimen/small_padding"
                        android:alpha="0.7"
                        android:background="@drawable/rounded_button"
                        android:backgroundTint="#607D8B"
                        android:drawableEnd="@drawable/ic_local_movies_white_18dp"
