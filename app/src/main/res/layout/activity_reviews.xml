<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal"
    tools:context="com.example.android.popularmoviesstage2.activities.ReviewsActivity">

    <ImageView
        android:id="@+id/reviews_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/backdrop_height"
        android:alpha="0.3"
        android:contentDescription="@string/content_description_poster"
        android:scaleType="centerCrop"
        android:src="@drawable/tmdb_backdrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/header_padding">

        <android.support.v7.widget.CardView
            android:id="@+id/reviews_cardview"
            android:layout_width="@dimen/poster_width"
            android:layout_height="@dimen/poster_height"
            android:layout_marginEnd="@dimen/regular_padding"
            android:layout_marginStart="@dimen/regular_padding"
            android:background="@color/colorWhite"
            app:cardCornerRadius="@dimen/small_padding"
            app:cardElevation="@dimen/small_padding">

            <ImageView
                android:id="@+id/reviews_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorGrey"
                android:contentDescription="@string/content_description_poster"
                android:scaleType="centerCrop"
                android:src="@drawable/no_poster" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/reviews_author_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:paddingBottom="@dimen/regular_padding"
            android:paddingEnd="@dimen/regular_padding"
            android:paddingStart="@dimen/padding_with_poster"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            tools:text="A review by Username" />

        <View
            android:id="@+id/reviews_separator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator"
            android:layout_below="@id/reviews_author_text_view"
            android:background="@color/colorAccent" />

        <ScrollView
            android:id="@+id/reviews_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/reviews_separator"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/reviews_content_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/regular_padding"
                android:paddingStart="@dimen/padding_with_poster"
                android:paddingTop="@dimen/regular_padding"
                tools:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus.\n\nDonec quam felis, ultricies nec, pellentesque eu, pretium quis, sem. Nulla consequat massa quis enim. Donec pede justo, fringilla vel, aliquet nec, vulputate eget, arcu. In enim justo, rhoncus ut, imperdiet a, venenatis vitae, justo. Nullam dictum felis eu pede mollis pretium. Integer tincidunt.." />
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
