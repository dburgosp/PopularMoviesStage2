<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/regular_padding"
    android:fillViewport="true"
    tools:context="com.example.android.popularmoviesstage2.fragments.CastCrewFragment">

    <RelativeLayout
        android:id="@+id/info_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/info_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_runtime_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/regular_padding"
                android:paddingStart="@dimen/regular_padding"
                android:paddingTop="@dimen/regular_padding"
                tools:text="Runtime" />

            <TextView
                android:id="@+id/info_genres_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/regular_padding"
                android:paddingStart="@dimen/regular_padding"
                tools:text="Genres" />

            <TextView
                android:id="@+id/info_release_date_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/regular_padding"
                android:paddingEnd="@dimen/regular_padding"
                android:paddingStart="@dimen/regular_padding"
                tools:text="Release date" />

            <TextView
                android:id="@+id/info_tagline_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/regular_padding"
                android:layout_marginStart="@dimen/regular_padding"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="italic"
                tools:text="Tagline" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator"
                android:layout_marginBottom="@dimen/tiny_padding"
                android:layout_marginEnd="@dimen/regular_padding"
                android:layout_marginStart="@dimen/regular_padding"
                android:layout_marginTop="@dimen/tiny_padding"
                android:background="@color/colorGrey" />

            <TextView
                android:id="@+id/info_overview_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/regular_padding"
                android:paddingEnd="@dimen/regular_padding"
                android:paddingStart="@dimen/regular_padding"
                android:textColor="@color/colorPrimary"
                android:textStyle="italic"
                tools:text="@string/no_overview" />
        </LinearLayout>

        <View
            android:id="@+id/info_separator_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator"
            android:layout_below="@id/info_header"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:id="@+id/info_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_separator_1"
            android:layout_margin="@dimen/regular_padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_status_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Status" />

            <TextView
                android:id="@+id/info_original_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Original title" />

            <TextView
                android:id="@+id/info_original_language_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Original Language" />

            <TextView
                android:id="@+id/info_budget_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Budget" />

            <TextView
                android:id="@+id/info_revenue_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Revenue" />
        </LinearLayout>

        <TextView
            android:id="@+id/info_no_result_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/regular_padding"
            android:gravity="center"
            android:textSize="@dimen/alert_text_size"
            tools:text="Message to display when there are no search results" />

        <ProgressBar
            android:id="@+id/info_loading_indicator"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/regular_padding" />
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
