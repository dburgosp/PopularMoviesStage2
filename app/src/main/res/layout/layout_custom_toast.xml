<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_toast_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_padding"
        android:elevation="@dimen/tiny_padding"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/regular_padding"
        app:cardElevation="@dimen/tiny_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorDarkWhite"
            android:orientation="vertical">

            <TextView
                android:id="@+id/toast_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:drawablePadding="@dimen/small_padding"
                android:drawableStart="@drawable/ic_info_outline_white_24dp"
                android:gravity="center_vertical"
                android:padding="@dimen/regular_padding"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/normal_plus_text_size"
                android:textStyle="bold"
                tools:text="TITLE" />

            <TextView
                android:id="@+id/toast_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/tiny_padding"
                android:alpha="0.9"
                android:paddingBottom="@dimen/regular_padding"
                android:paddingEnd="@dimen/regular_padding"
                android:paddingStart="@dimen/regular_padding"
                android:paddingTop="@dimen/regular_padding"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/normal_plus_text_size"
                tools:text="SUBTITLE 1\nContent for header 1\n\nSUBTITLE 2\nContent for header 2" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>