<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.popularmoviesstage2.MovieDetails">

    <ImageView
        android:id="@+id/movie_details_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/content_description_poster"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.85"
        android:background="@color/colorAccent"
        android:contentDescription="@string/content_description_alpha" />

    <LinearLayout
        android:id="@id/movie_details_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/regular_padding"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/movie_details_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/small_padding"
            app:cardElevation="@dimen/small_padding">

            <ImageView
                android:id="@+id/movie_details_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/content_description_poster"
                android:scaleType="centerCrop"
                tools:src="@drawable/no_poster" />
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/regular_padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/movie_details_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_title"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/movie_details_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    tools:text="2000" />

                <TextView
                    android:id="@+id/movie_details_score_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/small_padding"
                    android:layout_toStartOf="@+id/movie_details_score"
                    android:gravity="end"
                    android:text="@string/user_score"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/movie_details_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:padding="@dimen/small_padding"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="0.0" />

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/movie_details_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_details_header"
        android:background="@color/colorWhite" />

    <android.support.v4.view.ViewPager
        android:id="@+id/movie_details_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/movie_details_tab_layout"
        android:background="@color/colorGrey" />
</RelativeLayout>
