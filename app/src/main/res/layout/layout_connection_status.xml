<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/connection_status_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/regular_padding"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/connection_status_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big_padding"
        android:contentDescription="@string/content_description_icon"
        android:src="@drawable/ic_sentiment_dissatisfied_black_48dp"
        android:tint="@color/colorGrey" />

    <TextView
        android:id="@+id/connection_status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/regular_padding"
        android:gravity="center"
        android:textSize="@dimen/alert_text_size"
        tools:text="Message to display when there are no search results" />

    <ProgressBar
        android:id="@+id/connection_status_loading_indicator"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>