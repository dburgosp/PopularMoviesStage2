<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_collection_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/backdrop_collection_height"
    android:background="@color/colorAccent">

    <ImageView
        android:id="@+id/info_collection_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:contentDescription="@string/content_description_poster"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/gradient_collection_bg" />

    <android.support.v7.widget.CardView
        android:id="@+id/info_collection_cardview"
        android:layout_width="@dimen/small_poster_width"
        android:layout_height="@dimen/small_poster_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/regular_padding"
        android:background="@color/colorDarkWhite"
        app:cardElevation="@dimen/small_padding">

        <ImageView
            android:id="@+id/info_collection_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/separator"
            android:background="@color/colorBlack"
            android:contentDescription="@string/content_description_poster"
            android:scaleType="centerCrop"
            android:src="@drawable/default_poster" />
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/info_collection_name"
        android:layout_toStartOf="@+id/info_collection_cardview"
        android:gravity="end"
        android:text="@string/belongs_to_collection"
        android:textColor="@color/colorDarkWhite"
        android:textSize="@dimen/normal_plus_text_size" />

    <TextView
        android:id="@+id/info_collection_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/info_collection_cardview"
        android:layout_marginStart="@dimen/regular_padding"
        android:layout_marginTop="@dimen/tiny_padding"
        android:layout_toStartOf="@+id/info_collection_cardview"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="end"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        tools:text="Collection Name in more than one line" />
</RelativeLayout>