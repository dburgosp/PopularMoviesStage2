<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_collection_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_collection_header"
    android:background="@color/colorAccent">

    <ImageView
        android:id="@+id/info_collection_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/content_description_poster"
        android:scaleType="centerCrop"
        android:src="@drawable/no_backdrop" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/gradient_collection_bg" />

    <android.support.v7.widget.CardView
        android:id="@+id/info_collection_cardview"
        android:layout_width="@dimen/small_poster_width"
        android:layout_height="@dimen/small_poster_height"
        android:layout_marginBottom="@dimen/big_padding"
        android:layout_marginEnd="@dimen/regular_padding"
        android:layout_marginStart="@dimen/regular_padding"
        android:layout_marginTop="@dimen/big_padding"
        android:background="@color/colorDarkWhite"
        app:cardElevation="@dimen/small_padding">

        <ImageView
            android:id="@+id/info_collection_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/separator"
            android:background="@color/colorBlack"
            android:contentDescription="@string/content_description_poster"
            android:scaleType="centerCrop"
            android:src="@drawable/no_poster" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/info_collection_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/info_collection_name"
        android:layout_alignStart="@+id/info_collection_name"
        android:text="@string/belongs_to_collection"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/normal_plus_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/info_collection_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/info_collection_button"
        android:layout_alignStart="@+id/info_collection_button"
        android:textColor="@color/colorDarkWhite"
        android:textSize="@dimen/normal_plus_text_size"
        tools:text="Collection Name in more than one line" />

    <TextView
        android:id="@+id/info_collection_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/big_padding"
        android:layout_marginTop="@dimen/regular_padding"
        android:layout_toEndOf="@+id/info_collection_cardview"
        android:background="@drawable/rounded_button"
        android:elevation="@dimen/tiny_padding"
        android:paddingBottom="@dimen/tiny_padding"
        android:paddingEnd="@dimen/regular_padding"
        android:paddingStart="@dimen/regular_padding"
        android:paddingTop="@dimen/tiny_padding"
        android:text="VER COLECCIÃ“N"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/normal_text_size"
        android:textStyle="bold" />
</RelativeLayout>