<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_collection_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/info_collection_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/regular_padding"
        android:paddingEnd="@dimen/regular_padding"
        android:paddingStart="@dimen/regular_padding"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/normal_plus_text_size"
        tools:text="BELONGS TO\nCollection Name in more than one line" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/info_collection_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/small_padding" />
</LinearLayout>