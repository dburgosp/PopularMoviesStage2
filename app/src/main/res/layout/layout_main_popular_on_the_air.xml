<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_popular_on_the_air_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <!-- Popular people -->

    <android.support.v7.widget.CardView
        android:id="@+id/home_popular_people_cardview"
        style="@style/HomeCardViewStyle"
        android:layout_width="0dp"
        android:layout_marginEnd="@dimen/tiny_padding"
        android:layout_weight="1"
        android:background="@color/colorPeoplePrimaryDark"
        app:cardCornerRadius="@dimen/small_padding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPeoplePrimaryDark">

            <TextView
                android:id="@+id/home_popular_people_title"
                style="@style/HomeBottomTextStyle"
                android:layout_below="@+id/home_popular_people_viewflipper"
                android:layout_marginTop="-20dp"
                android:background="@color/colorPeoplePrimary"
                android:text="@string/popular" />

            <com.example.android.popularmoviesstage2.classes.ViewFlipperIndicator
                android:id="@+id/home_popular_people_viewflipper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autoStart="true"
                android:flipInterval="4000">

                <!-- Children views will be added programmatically. -->

            </com.example.android.popularmoviesstage2.classes.ViewFlipperIndicator>

            <TextView
                style="@style/HomeUpRightTextStyle"
                android:backgroundTint="@color/colorPeoplePrimary"
                android:drawableEnd="@drawable/ic_person_white_18dp"
                android:text="@string/people" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/regular_padding"
                android:layout_above="@id/home_popular_people_title"
                android:layout_marginBottom="19dp"
                android:background="@drawable/gradient_vertical_bottom"
                android:backgroundTint="@color/colorPeoplePrimary" />

            <ProgressBar
                android:id="@+id/home_popular_people_loading_indicator"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/home_popular_people_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/regular_padding"
                android:alpha="0.7"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                tools:text="@string/no_connection" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <!-- On the air (TV) -->

    <android.support.v7.widget.CardView
        android:id="@+id/home_on_the_air_cardview"
        style="@style/HomeCardViewStyle"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/tiny_padding"
        android:layout_weight="1"
        android:background="@color/colorSeriesPrimaryDark"
        app:cardCornerRadius="@dimen/small_padding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorSeriesPrimaryDark">

            <TextView
                android:id="@+id/home_on_the_air_title"
                style="@style/HomeBottomTextStyle"
                android:layout_below="@+id/home_on_the_air_viewflipper"
                android:layout_marginTop="-20dp"
                android:background="@color/colorSeriesPrimary"
                android:text="@string/tv_on_the_air" />

            <com.example.android.popularmoviesstage2.classes.ViewFlipperIndicator
                android:id="@+id/home_on_the_air_viewflipper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autoStart="true"
                android:flipInterval="5000">

                <!-- Children views will be added programmatically. -->

            </com.example.android.popularmoviesstage2.classes.ViewFlipperIndicator>

            <TextView
                style="@style/HomeUpRightTextStyle"
                android:backgroundTint="@color/colorSeriesPrimary"
                android:drawableEnd="@drawable/ic_tv_white_18dp"
                android:text="@string/series" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/regular_padding"
                android:layout_above="@id/home_on_the_air_title"
                android:layout_marginBottom="19dp"
                android:background="@drawable/gradient_vertical_bottom"
                android:backgroundTint="@color/colorSeriesPrimary" />

            <ProgressBar
                android:id="@+id/home_on_the_air_loading_indicator"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/home_on_the_air_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/regular_padding"
                android:alpha="0.7"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                tools:text="@string/no_connection" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>