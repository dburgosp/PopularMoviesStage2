<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/intro_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context="com.example.android.popularmoviesstage2.activities.IntroActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/intro_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/wendy_one"
            android:text="@string/title_activity_main"
            android:textColor="@color/colorDarkWhite"
            android:textSize="28sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/intro_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/intro_image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_padding"
                android:src="@drawable/ic_local_movies_black_48dp"
                android:tint="@color/colorHighScoreForeground" />

            <ImageView
                android:id="@+id/intro_image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_padding"
                android:src="@drawable/ic_tv_white_48dp"
                android:tint="@color/colorMediumScoreForeground" />

            <ImageView
                android:id="@+id/intro_image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_padding"
                android:src="@drawable/ic_person_white_48dp"
                android:tint="@color/colorLowScoreForeground" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/intro_loading_indicator"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/big_padding" />

        <TextView
            android:id="@+id/intro_loading_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/big_padding"
            android:gravity="center"
            android:padding="@dimen/regular_padding"
            android:text="Message to display when there are no search results"
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/normal_text_size" />
    </LinearLayout>
</LinearLayout>
