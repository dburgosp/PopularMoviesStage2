<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.NoTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <!-- General purpose XML layout styles -->

    <style name="SectionHeaderWhite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/normal_plus_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SectionContentWhite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.7</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/normal_plus_text_size</item>
    </style>

    <!-- Styles for layout_movie_details_info_links.xml -->

    <style name="MovieDetailsInfoLinksLinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MovieDetailsInfoLinksImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:backgroundTint">@color/colorWhite</item>
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="MovieDetailsInfoLinksText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/tiny_padding</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="HomeCardViewStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/small_padding</item>
        <item name="android:elevation">@dimen/small_padding</item>
    </style>

    <style name="HomeMainOptionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_forward_white_24dp</item>
        <item name="android:drawablePadding">@dimen/small_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HomeUpRightTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">-12dp</item>
        <item name="android:layout_marginTop">-12dp</item>
        <item name="android:alpha">0.9</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:drawablePadding">@dimen/tiny_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/tiny_padding</item>
        <item name="android:paddingEnd">@dimen/big_padding</item>
        <item name="android:paddingStart">@dimen/regular_padding</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="HomeBottomTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_forward_white_24dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/small_padding</item>
        <item name="android:paddingEnd">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:paddingTop">@dimen/big_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>
</resources>
