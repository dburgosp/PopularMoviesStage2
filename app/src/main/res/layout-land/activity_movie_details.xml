<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.android.popularmoviesstage2.activities.MovieDetailsActivity">

    <ImageView
        android:id="@+id/movie_details_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:contentDescription="@string/content_description_poster"
        android:scaleType="centerCrop"
        android:src="@drawable/tmdb_backdrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="64dp">

        <TextView
            android:id="@+id/movie_details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="sans-serif-smallcaps"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingBottom="@dimen/regular_padding"
            android:paddingEnd="@dimen/regular_padding"
            android:paddingStart="@dimen/padding_with_poster"
            android:paddingTop="@dimen/regular_padding"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            tools:text="@string/no_title" />

        <RelativeLayout
            android:paddingTop="@dimen/separator"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TabLayout
                android:id="@+id/movie_details_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingStart="@dimen/padding_with_poster"
                app:tabMode="scrollable" />

            <android.support.v4.view.ViewPager
                android:id="@+id/movie_details_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/movie_details_tab_layout"
                android:background="@color/colorGrey"
                android:paddingStart="@dimen/padding_with_poster" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@id/movie_details_header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/regular_padding"
        android:orientation="vertical"
        android:paddingTop="64dp">

        <android.support.v7.widget.CardView
            android:id="@+id/movie_details_cardview"
            android:layout_width="@dimen/poster_width"
            android:layout_height="@dimen/poster_height"
            android:background="@color/colorWhite"
            app:cardElevation="@dimen/small_padding">

            <ImageView
                android:id="@+id/movie_details_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/content_description_poster"
                android:scaleType="centerCrop"
                android:src="@drawable/no_poster" />
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/movie_details_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/small_padding"
                android:alpha="0.6"
                android:drawablePadding="@dimen/tiny_padding"
                android:drawableStart="@drawable/ic_date_range_black_18dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/subtitle_text_size"
                tools:text="2000" />

            <com.github.lzyzsd.circleprogress.DonutProgress
                android:id="@+id/movie_details_score_progress"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle"
                app:donut_circle_starting_degree="270"
                app:donut_finished_color="@color/colorAccent"
                app:donut_finished_stroke_width="4dp"
                app:donut_inner_bottom_text_color="@color/colorPrimaryDark"
                app:donut_text_color="@color/colorWhite"
                app:donut_text_size="@dimen/alert_text_size"
                app:donut_unfinished_color="@color/colorPrimary"
                app:donut_unfinished_stroke_width="4dp"
                tools:donut_progress="0"
                tools:donut_text="" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
