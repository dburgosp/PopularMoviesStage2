<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/small_padding"
    android:layout_marginStart="@dimen/small_padding"
    android:layout_marginTop="@dimen/small_padding"
    android:background="@color/colorWhite"
    app:cardCornerRadius="@dimen/small_padding"
    app:cardElevation="@dimen/tiny_padding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cast_crew_image"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="@dimen/small_padding"
            android:background="@color/colorWhite"
            android:scaleType="centerCrop"
            android:src="@drawable/no_person" />

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cast_crew_character"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tiny_padding"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingBottom="@dimen/tiny_padding"
                android:paddingEnd="@dimen/small_padding"
                android:paddingStart="@dimen/small_padding"
                android:textSize="12sp"
                tools:text="Character name in more than one line" />


            <TextView
                android:id="@+id/cast_crew_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingBottom="@dimen/small_padding"
                android:paddingEnd="@dimen/small_padding"
                android:paddingStart="@dimen/small_padding"
                android:textColor="@color/colorBlack"
                android:textSize="13sp"
                android:textStyle="bold"
                tools:text="Artist name in more than one line" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>