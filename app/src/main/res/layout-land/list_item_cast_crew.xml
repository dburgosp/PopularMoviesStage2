<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/regular_padding"
    android:layout_marginStart="@dimen/small_padding"
    android:layout_marginTop="@dimen/small_padding"
    android:background="@color/colorWhite"
    app:cardCornerRadius="@dimen/small_padding"
    app:cardElevation="@dimen/tiny_padding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cast_crew_image"
            android:layout_width="@dimen/poster_height"
            android:layout_height="@dimen/poster_height"
            android:background="@color/colorWhite"
            android:contentDescription="@string/content_description_person_image"
            android:scaleType="centerCrop"
            android:src="@drawable/no_person" />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cast_crew_character"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tiny_padding"
                android:ellipsize="end"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="bottom"
                android:lines="3"
                android:paddingEnd="@dimen/small_padding"
                android:paddingStart="@dimen/small_padding"
                android:textSize="@dimen/normal_text_size"
                tools:text="Character name in more than one line" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator"
                android:layout_marginBottom="@dimen/tiny_padding"
                android:layout_marginTop="@dimen/tiny_padding"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/cast_crew_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="top"
                android:lines="2"
                android:paddingBottom="@dimen/small_padding"
                android:paddingEnd="@dimen/small_padding"
                android:paddingStart="@dimen/small_padding"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/normal_plus_text_size"
                android:textStyle="bold"
                tools:text="Artist name in more than one line" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>